{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch cfron",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "./cfron"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "command": "cargo watch -x clippy",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
        {
            "label": "Watch cfron-web",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "./cfron-web"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "command": "cargo watch -x clippy",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
        {
            "label": "Watch cfron-worker",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "./cfron-worker"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "command": "cargo watch -x clippy",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        }
    ]
}