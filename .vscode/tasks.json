{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch saffron",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "./saffron"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "command": "cargo watch -x clippy",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
